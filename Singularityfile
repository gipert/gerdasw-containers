    ./configure --prefix="$SINGULARITY_APPROOT" \
        CXXFLAGS='-std=c++11' \
        --with-clhep="/scif/apps/clhep" \
        --with-rootsys="/scif/apps/root" \
        --with-mgdo="/scif/apps/MGDO"
    make -j"$(nproc)" -k || true
    make -j"$(nproc)" -k || true
    make -j"$(nproc)" -k || true
    make && make install
#    rm -rf /tmp/GELATIO

